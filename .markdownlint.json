{
    "MD010": {
        "code_blocks": false
    },
    "MD013": false,
    "line-length": {
        "code_blocks": false
    },
    "no-hard-tabs": {
        "code_blocks": false
    },
    "no-inline-html": {
        "allowed_elements": [
            "br",
            "figcaption",
            "figure",
            "p",
            "span",
            "ruby",
            "rt"
        ]
    },
    "no-trailing-punctuation": {
        "punctuation": ".,;:!"
    }
}
